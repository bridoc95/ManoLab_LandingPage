        // Mobile Menu Toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');

        if (mobileMenuButton) {
            mobileMenuButton.addEventListener('click', () => {
                // Create mobile menu if it doesn't exist
                let menu = document.getElementById('mobile-menu');
                if (!menu) {
                    menu = document.createElement('div');
                    menu.id = 'mobile-menu';
                    menu.className = 'fixed inset-0 bg-gradient-to-br from-purple-900/95 to-pink-900/95 backdrop-blur-lg z-50 flex flex-col items-center justify-center space-y-8 text-2xl';
                    menu.innerHTML = `
                        <button id="close-mobile-menu" class="absolute top-8 right-8 p-2 rounded-full bg-white/20 text-white hover:bg-white/30 transition duration-300">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                        <a href="#intro" class="text-white hover:text-purple-200 transition duration-300" onclick="closeMobileMenu()">소개</a>
                        <a href="#why-manolab" class="text-white hover:text-purple-200 transition duration-300" onclick="closeMobileMenu()">특징</a>
                        <a href="#how-it-works" class="text-white hover:text-purple-200 transition duration-300" onclick="closeMobileMenu()">작동 방식</a>
                        <a href="#faq" class="text-white hover:text-purple-200 transition duration-300" onclick="closeMobileMenu()">FAQ</a>
                        <a href="#signup" class="bg-white text-purple-600 px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition duration-300" onclick="closeMobileMenu()">사전 신청</a>
                    `;
                    document.body.appendChild(menu);
                    
                    // Add close functionality
                    document.getElementById('close-mobile-menu').addEventListener('click', closeMobileMenu);
                }
                menu.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            });
        }

        function closeMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            if (menu) {
                menu.classList.add('hidden');
                document.body.style.overflow = '';
            }
        }

