        // Message type styles
        const messageStyles = {
            user: {
                icon: '👤',
                bgClass: 'bg-gray-100 text-gray-800',
                align: 'ml-auto'
            },
            analysis: {
                icon: '🔍',
                bgClass: 'bg-blue-100 text-blue-800',
                align: 'mr-auto'
            },
            question: {
                icon: '❓',
                bgClass: 'bg-yellow-100 text-yellow-800',
                align: 'mr-auto'
            },
            processing: {
                icon: '⚙️',
                bgClass: 'bg-purple-100 text-purple-800',
                align: 'mr-auto'
            },
            success: {
                icon: '✅',
                bgClass: 'bg-green-100 text-green-800',
                align: 'mr-auto'
            }
        };

        // Current scenario state
        let currentScenario = null;
        let currentStepIndex = 0;
        let isWaitingForUser = false;

        // Add message function
        function addMessage(text, type = 'user', animate = true) {
            const style = messageStyles[type];
            const messageDiv = document.createElement('div');
            messageDiv.className = `flex mb-4 ${animate ? 'opacity-0' : ''}`;
            
            messageDiv.innerHTML = `
                <div class="max-w-xs lg:max-w-md px-4 py-3 rounded-2xl ${style.bgClass} ${style.align}">
                    <div class="flex items-start space-x-2">
                        <span class="text-lg">${style.icon}</span>
                        <div class="text-sm leading-relaxed whitespace-pre-line">${text}</div>
                    </div>
                </div>
            `;
            
            heroChatContainer.appendChild(messageDiv);
            
            if (animate) {
                setTimeout(() => {
                    messageDiv.classList.remove('opacity-0');
                    messageDiv.classList.add('transition-opacity', 'duration-500');
                }, 100);
            }
            
            heroChatContainer.scrollTop = heroChatContainer.scrollHeight;
        }

        // Find scenario function
        function findScenario(userInput) {
            const input = userInput.toLowerCase();
            
            // Check for more specific keywords first
            for (const [key, scenario] of Object.entries(simulationScenarios)) {
                // For taxi scenario, check for specific taxi keywords
                if (key === '택시' && (input.includes('택시') || input.includes('호출') || input.includes('카카오'))) {
                    return key;
                }
                
                // For delivery scenario, check for specific delivery keywords  
                if (key === '배송' && (input.includes('배송') || input.includes('택배') || input.includes('쿠팡')) && !input.includes('택시') && !input.includes('호출')) {
                    return key;
                }
                
                // For other scenarios, use original logic
                if (key !== '택시' && key !== '배송' && scenario.keywords.some(keyword => input.includes(keyword))) {
                    return key;
                }
            }
            return null;
        }

        // Run scenario function
        async function runScenario(scenarioKey) {
            currentScenario = simulationScenarios[scenarioKey];
            currentStepIndex = 0;
            
            for (let i = 0; i < currentScenario.steps.length; i++) {
                const step = currentScenario.steps[i];
                currentStepIndex = i;
                
                if (step.waitForUser) {
                    isWaitingForUser = true;
                }
                
                await new Promise(resolve => {
                    setTimeout(() => {
                        addMessage(step.message, step.type);
                        heroChatContainer.className = heroChatContainer.className.replace(/bg-\w+-50/g, '') + ` ${step.bgColor}`;
                        
                        if (step.waitForUser) {
                            // Wait for user response
                            resolve();
                        } else if (step.hasFollowUp && i === currentScenario.steps.length - 2) {
                            // Automatically add "응" response
                            setTimeout(() => {
                                addMessage('응', 'user');
                                setTimeout(() => {
                                    resolve();
                                }, 500);
                            }, 2000);
                        } else {
                            resolve();
                        }
                    }, step.delay);
                });
                
                if (step.waitForUser) {
                    break; // Wait for user input
                }
            }
            
            // If scenario completed without waiting for user, reset after delay
            if (!isWaitingForUser) {
                setTimeout(() => {
                    resetToInitialScreen();
                }, 4000);
            }
        }

        // Handle user response function
        async function handleUserResponse(input) {
            if (!isWaitingForUser || !currentScenario) return false;
            
            const response = input.toLowerCase().trim();
            if (response === '응' || response === '네' || response === 'yes' || response === 'y') {
                isWaitingForUser = false;
                currentStepIndex++;
                
                // Execute remaining steps
                for (let i = currentStepIndex; i < currentScenario.steps.length; i++) {
                    const step = currentScenario.steps[i];
                    
                    await new Promise(resolve => {
                        setTimeout(() => {
                            addMessage(step.message, step.type);
                            heroChatContainer.className = heroChatContainer.className.replace(/bg-\w+-50/g, '') + ` ${step.bgColor}`;
                            
                            if (step.hasFollowUp && i === currentScenario.steps.length - 2) {
                                // Automatically add "응" response
                                setTimeout(() => {
                                    addMessage('응', 'user');
                                    setTimeout(() => {
                                        resolve();
                                    }, 500);
                                }, 2000);
                            } else {
                                resolve();
                            }
                        }, step.delay);
                    });
                }
                
                currentScenario = null;
                
                // Reset to initial screen after completion
                setTimeout(() => {
                    resetToInitialScreen();
                }, 4000);
                
                return true;
            } else if (response === '아니' || response === '아니요' || response === 'no' || response === 'n') {
                isWaitingForUser = false;
                currentScenario = null;
                
                setTimeout(() => {
                    addMessage('AI가 작업을 종료합니다.', 'analysis');
                    heroChatContainer.className = heroChatContainer.className.replace(/bg-\w+-50/g, '') + ' bg-gray-50';
                    
                    // Reset to initial screen after cancellation
                    setTimeout(() => {
                        resetToInitialScreen();
                    }, 3000);
                }, 1000);
                
                return true;
            }
            
            return false;
        }

        // Reset to initial screen function
        function resetToInitialScreen() {
            heroChatContainer.innerHTML = `
                <div class="text-center text-gray-500 py-8">
                    <div class="text-4xl mb-4">🤖</div>
                    <p class="text-lg font-medium">명령어를 입력하여 AI의 동작을 시뮬레이션해보세요!</p>
                    <div class="mt-4 text-sm text-gray-400 space-y-1">
                        <p>💡 <strong>추천 명령어:</strong></p>
                        <p class="cursor-pointer hover:text-blue-500 transition duration-200">"스타벅스에서 늘 마시던 아이스 아메리카노 주문해 줘"</p>
                        <p class="cursor-pointer hover:text-blue-500 transition duration-200">"방금 주문한 옷, 배송지를 회사로 바꾸고 어디쯤 오는지 알려줘"</p>
                        <p class="cursor-pointer hover:text-blue-500 transition duration-200">"오늘 저녁에 비대면 진료로 피부과 의사 예약해 줘"</p>
                        <p class="cursor-pointer hover:text-blue-500 transition duration-200">"교촌치킨 허니콤보 배달 주문해 줘"</p>
                        <p class="cursor-pointer hover:text-blue-500 transition duration-200">"회사까지 택시 호출해 줘"</p>
                    </div>
                </div>
            `;
            heroChatContainer.className = 'bg-gray-50 rounded-2xl p-6 mb-4 h-80 overflow-y-auto';
            currentScenario = null;
            currentStepIndex = 0;
            isWaitingForUser = false;
        }

        // Handle chat input function
        async function handleChatInput() {
            const input = heroChatInput.value.trim();
            if (!input) return;
            
            // Add user message
            addMessage(input, 'user');
            heroChatInput.value = '';
            
            // Remove welcome message if present
            if (heroChatContainer.querySelector('.text-center')) {
                heroChatContainer.innerHTML = '';
                addMessage(input, 'user', false);
            }
            
            // Check if waiting for user response
            if (isWaitingForUser) {
                const handled = await handleUserResponse(input);
                if (handled) return;
            }
            
            // Find new scenario
            const scenarioKey = findScenario(input);
            if (scenarioKey) {
                await runScenario(scenarioKey);
            } else {
                // Default response
                setTimeout(() => {
                    addMessage('죄송합니다. 해당 명령을 이해하지 못했습니다. 추천 명령어를 사용해보세요!', 'analysis');
                    
                    // Reset to initial screen after 3 seconds
                    setTimeout(() => {
                        resetToInitialScreen();
                    }, 3000);
                }, 1500);
            }
        }

        // Event listeners for chat
        if (heroSendButton) {
            heroSendButton.addEventListener('click', handleChatInput);
        }

        if (heroChatInput) {
            heroChatInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    handleChatInput();
                }
            });
        }

        // Click on recommended commands
        heroChatContainer.addEventListener('click', (e) => {
            if (e.target.tagName === 'P' && e.target.textContent.includes('"')) {
                const command = e.target.textContent.match(/"([^"]+)"/);
                if (command) {
                    heroChatInput.value = command[1];
                    handleChatInput();
                }
            }
        });

        // Enhanced FAQ Accordion
        const faqQuestions = document.querySelectorAll('.faq-question');
        faqQuestions.forEach(question => {
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                const icon = question.querySelector('svg');
                const isOpen = !answer.classList.contains('hidden');

                // Close all other answers
                faqQuestions.forEach(otherQuestion => {
                    if (otherQuestion !== question) {
                        const otherAnswer = otherQuestion.nextElementSibling;
                        const otherIcon = otherQuestion.querySelector('svg');
                        otherAnswer.classList.add('hidden');
                        otherIcon.classList.remove('rotate-180');
                    }
                });

                // Toggle current answer
                if (isOpen) {
                    answer.classList.add('hidden');
                    icon.classList.remove('rotate-180');
                } else {
                    answer.classList.remove('hidden');
                    icon.classList.add('rotate-180');
                }
            });
        });

        // Enhanced Form Submission
        const signupForm = document.getElementById('signup-form');
        if (signupForm) {
            signupForm.addEventListener('submit', (e) => {
                e.preventDefault();
                
                const email = document.getElementById('email-input').value;
                const phone = document.getElementById('phone-input').value;
                const referral = document.getElementById('referral-select').value;

                // Create success modal
                const modal = document.createElement('div');
                modal.className = 'fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4';
                modal.innerHTML = `
                    <div class="glass-effect p-8 rounded-3xl text-center max-w-md mx-auto transform animate-fade-in-up">
                        <div class="w-20 h-20 bg-gradient-to-r from-green-400 to-blue-500 rounded-full flex items-center justify-center mx-auto mb-6">
                            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <h3 class="text-3xl font-bold text-white mb-4">🎉 등록 완료!</h3>
                        <p class="text-white/90 mb-6 leading-relaxed">
                            ManoLab MVP 테스트에 성공적으로 등록되었습니다!<br>
                            곧 최신 소식을 전해드릴게요.
                        </p>
                        <button id="close-modal" class="bg-white text-purple-600 font-bold py-3 px-8 rounded-2xl hover:bg-gray-50 transition duration-300">
                            확인
                        </button>
                    </div>
                `;
                
                document.body.appendChild(modal);
                document.body.style.overflow = 'hidden';

                // Update user count
                const userCountEl = document.getElementById('user-count');
                if (userCountEl) {
                    const currentCount = parseInt(userCountEl.textContent.replace(',', ''));
                    userCountEl.textContent = (currentCount + 1).toLocaleString();
                }

                document.getElementById('close-modal').addEventListener('click', () => {
                    document.body.removeChild(modal);
                    document.body.style.overflow = '';
                    signupForm.reset();
                });

                console.log('사전 등록:', { email, phone, referral });
            });
        }

        // Scroll Animation Observer
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        // Observe all sections with fade-in class
        document.querySelectorAll('.section-fade-in').forEach(section => {
            observer.observe(section);
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
                closeMobileMenu();
            });
        });

        // Dynamic stats counter animation
        function animateCounter(element, target, duration = 2000, prefix = '', suffix = '') {
            let start = 0;
            const startTime = performance.now();
            
            function updateCounter(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                // Easing function for smooth animation
                const easeOutQuart = 1 - Math.pow(1 - progress, 4);
                const current = Math.floor(start + (target - start) * easeOutQuart);
                
                // Format number with commas
                const formattedNumber = current.toLocaleString();
                element.textContent = `${prefix}${formattedNumber}${suffix}`;
                
                if (progress < 1) {
                    requestAnimationFrame(updateCounter);
                }
            }
            
            requestAnimationFrame(updateCounter);
        }

        // Trigger animations when hero section is visible
        const heroSection = document.getElementById('intro');
        if (heroSection) {
            const heroObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // Animate task counter 
                        const taskEl = document.getElementById('hero-task-counter');
                        if (taskEl && !taskEl.dataset.animated) {
                            animateCounter(taskEl, 1247, 2500, '', '');
                            taskEl.dataset.animated = 'true';
                        }
                        heroObserver.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.3 });

            heroObserver.observe(heroSection);
        }

        // Trigger counter animations when signup section is visible
        const signupSection = document.getElementById('signup');
        if (signupSection) {
            const signupObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const userCountEl = document.getElementById('user-count');
                        if (userCountEl && !userCountEl.dataset.animated) {
                            animateCounter(userCountEl, 2847);
                            userCountEl.dataset.animated = 'true';
                        }
                        signupObserver.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });

            signupObserver.observe(signupSection);
        }

        // Optional: Live counter that keeps increasing (for demo effect)
        function startLiveCounter() {
            const taskEl = document.getElementById('hero-task-counter');
            if (taskEl) {
                setInterval(() => {
                    const currentValue = parseInt(taskEl.textContent.replace(/[^0-9]/g, ''));
                    if (currentValue < 2000) {
                        taskEl.textContent = (currentValue + 1).toLocaleString();
                    }
                }, 3000); // Increase every 3 seconds
            }
        }

        // Start live counter for demo effect
        setTimeout(startLiveCounter, 5000);

        // Add floating particles effect
        function createFloatingParticle() {
            const particle = document.createElement('div');
            particle.className = 'fixed w-2 h-2 bg-white/20 rounded-full pointer-events-none z-0';
            particle.style.left = Math.random() * window.innerWidth + 'px';
            particle.style.top = window.innerHeight + 'px';
            particle.style.animation = `float ${Math.random() * 3 + 4}s linear forwards`;
            
            document.body.appendChild(particle);
            
            setTimeout(() => {
                particle.remove();
            }, 7000);
        }

        // Create particles periodically
        setInterval(createFloatingParticle, 3000);

        // Add CSS for particle animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes float {
                to {
                    transform: translateY(-${window.innerHeight + 100}px) rotate(360deg);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);

        // Header scroll effect
        let lastScrollTop = 0;
        const header = document.querySelector('header');
        
        window.addEventListener('scroll', () => {
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            
            if (scrollTop > lastScrollTop && scrollTop > 100) {
                // Scrolling down
                header.style.transform = 'translateY(-100%)';
            } else {
                // Scrolling up
                header.style.transform = 'translateY(0)';
            }
            
            lastScrollTop = scrollTop;
        });

        // Add scroll transition to header
        header.style.transition = 'transform 0.3s ease-in-out';

        console.log('🚀 Enhanced ManoLab landing page loaded successfully!');   
    </script>
</body>
</html>
                
